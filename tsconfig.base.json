{
  "compilerOptions": {
    "moduleResolution": "node",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "es2015",
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "sourceMap": true
  }
}
