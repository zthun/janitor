{
    "extends": "tslint:recommended",
    "rules": {
        "forin": false,
        "no-bitwise": false,
        "no-require-imports": false,
        "no-var-requires": false,
        "quotemark": {
            "options": [
                "single"
            ]
        },
        "trailing-comma": false,
        "max-line-length": false,
        "variable-name": {
            "options": [
                "ban-keywords",
                "check-format",
                "allow-leading-underscore",
                "allow-pascal-case"
            ]
        },
        "object-literal-sort-keys": false
    }
}
