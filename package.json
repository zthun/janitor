{
  "name": "@zthun/lint-janitor",
  "version": "8.0.0",
  "description": "Style checks with tools for web projects using common rules.",
  "keywords": [
    "lint",
    "sassLint",
    "styleLint",
    "tslint",
    "htmlHint",
    "eslint",
    "jsonLint",
    "yamlLint"
  ],
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/zthun/zwebstyles"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "linters": "./dist/cli.js"
  },
  "scripts": {
    "clean": "rimraf coverage dist reports *.tgz",
    "test": "jest --coverage --runInBand",
    "lint": "ts-node src/cli.ts",
    "build": "tsc -p tsconfig.bin.json",
    "make": "npm run clean && npm run lint && npm test && npm run build && npm pack",
    "prepublishOnly": "npm run make",
    "start": "node --inspect-brk -r ts-node/register src/cli.ts"
  },
  "author": "Anthony Bonta",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "acorn": "^7.3.1",
    "chalk": "^4.1.0",
    "cosmiconfig": "^6.0.0",
    "eslint": "^7.4.0",
    "glob": "^7.1.6",
    "htmlhint": "^0.14.1",
    "js-yaml": "^3.14.0",
    "stylelint": "^13.6.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.18.0",
    "typescript": "^3.9.6",
    "yargs": "^15.4.1"
  },
  "devDependencies": {
    "@types/eslint": "^7.2.0",
    "@types/glob": "^7.1.3",
    "@types/htmlhint": "^0.9.1",
    "@types/jest": "^26.0.4",
    "@types/js-yaml": "^3.12.5",
    "@types/node": "^14.0.23",
    "@types/stylelint": "^9.10.1",
    "@types/yargs": "^15.0.5",
    "jest": "^26.1.0",
    "ts-jest": "^26.1.2",
    "ts-node": "^8.10.2"
  },
  "files": [
    "dist/**",
    "lint/**"
  ]
}
