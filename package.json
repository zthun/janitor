{
  "name": "@zthun/web-styles",
  "version": "6.0.0",
  "description": "Style checks with tools for web projects using common rules.",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/zthun/zwebstyles"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test:tslint": "tslint src/test.ts",
    "test:sasslint": "sass-lint src/test.scss -v -q",
    "test:htmlhint": "htmlhint src/test.html",
    "test:eslint": "eslint src/test.js",
    "test": "npm run test:eslint && npm run test:htmlhint && npm run test:sasslint && npm run test:tslint",
    "lint:tslint": "jsonlint lint/tslint.json -q",
    "lint:eslint": "jsonlint lint/.eslintrc -q",
    "lint:htmlhint": "jsonlint lint/.htmlhintrc -q",
    "lint:sasslint": "yamllint lint/.sass-lint.yml",
    "lint": "npm run lint:sasslint && npm run lint:htmlhint && npm run lint:eslint && npm run lint:tslint",
    "make": "npm run lint && npm test && npm pack"
  },
  "keywords": [
    "styles",
    "practices",
    "formatting",
    "formatters",
    "jshint",
    "htmlhint",
    "sasslint",
    "eslint",
    "tslint",
    "sass",
    "javascript"
  ],
  "author": "Anthony Bonta",
  "dependencies": {
    "eslint": "=5.7.0",
    "htmlhint": "=0.10.1",
    "jsonlint": "=1.6.3",
    "sass-lint": "=1.12.1",
    "tslint": "=5.11.0",
    "typescript": "=3.1.3",
    "yaml-lint": "=1.2.4"
  }
}
