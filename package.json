{
  "name": "@zthun/linting",
  "version": "0.0.0",
  "description": "Style checks with tools for web projects using common rules.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zthun/janitor"
  },
  "private": true,
  "scripts": {
    "clean": "rimraf packages/**/dist packages/**/docs reports packages/**/*.tgz",
    "test": "jest --coverage --runInBand",
    "lint": "ts-node packages/lint-janitor/src/cli.ts",
    "build": "lerna run build",
    "make": "yarn clean && yarn lint && npm test && npm run build",
    "prepare": "husky install",
    "release": "yarn make && lerna publish --conventional-commits"
  },
  "author": "Anthony Bonta",
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/eslint": "^7.2.0",
    "@types/glob": "^7.1.3",
    "@types/htmlhint": "^0.9.1",
    "@types/jest": "^26.0.4",
    "@types/js-yaml": "^4.0.0",
    "@types/lodash": "^4.14.157",
    "@types/node": "^16.4.2",
    "@types/stylelint": "^13.13.0",
    "@types/yargs": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "acorn": "^8.0.5",
    "chalk": "^4.1.0",
    "cosmiconfig": "^7.0.0",
    "cspell": "^5.3.10",
    "eslint": "^7.4.0",
    "glob": "^7.1.6",
    "htmlhint": "^0.15.1",
    "husky": "^6.0.0",
    "jest": "^27.0.5",
    "js-yaml": "^4.0.0",
    "lerna": "^4.0.0",
    "lodash": "^4.17.19",
    "markdownlint": "~0.23.0",
    "prettier": "^2.2.1",
    "stylelint": "^13.6.1",
    "stylelint-config-standard": "^22.0.0",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typedoc": "^0.21.0",
    "typescript": "^4.1.5",
    "yargs": "^17.0.1"
  },
  "workspaces": [
    "packages/eslint-config",
    "packages/stylelint-config",
    "packages/markdownlint-config",
    "packages/htmlhint-config",
    "packages/prettier-config",
    "packages/lint-janitor"
  ]
}
