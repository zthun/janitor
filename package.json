{
  "name": "@zthun/janitor",
  "version": "0.0.0",
  "description": "Style checks with tools for web projects using common rules.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zthun/janitor"
  },
  "private": true,
  "scripts": {
    "clean": "rimraf --glob 'packages/**/dist' 'packages/**/docs' 'reports' 'coverage' 'packages/**/*.tgz'",
    "test": "vitest --run --coverage",
    "lint": "ts-node packages/lint-janitor/src/cli.ts",
    "build": "lerna run build",
    "make": "yarn clean && yarn lint && yarn test && yarn build",
    "postinstall": "husky install"
  },
  "author": "Anthony Bonta",
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/eslint": "^8.44.7",
    "@types/estree": "^1.0.5",
    "@types/glob": "^8.1.0",
    "@types/htmlhint": "^1.1.2",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.9.3",
    "@types/prettier": "^3.0.0",
    "@types/yargs": "^17.0.32",
    "@vitest/coverage-istanbul": "^0.34.6",
    "husky": "^8.0.3",
    "lerna": "^7.4.2",
    "react": "^18.2.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "typescript": "~5.3.2",
    "vitest": "^0.34.6"
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@3.2.1"
}
