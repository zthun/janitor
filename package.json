{
  "name": "@zthun/web-styles",
  "version": "7.0.0",
  "description": "Style checks with tools for web projects using common rules.",
  "keywords": [
    "lint",
    "sasslint",
    "tslint",
    "htmlhint",
    "eslint",
    "jsonlint",
    "yamllint"
  ],
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/zthun/zwebstyles"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "zlint": "./dist/cli.js"
  },
  "scripts": {
    "clean": "rimraf coverage dist reports *.tgz",
    "test": "jest --coverage",
    "lint": "ts-node src/cli.ts",
    "build": "tsc",
    "make": "npm run clean && npm run lint && npm test && npm run build && npm pack",
    "prepublishOnly": "npm run make",
    "start": "node --inspect-brk -r ts-node/register src/cli.ts"
  },
  "author": "Anthony Bonta",
  "dependencies": {
    "chalk": "=2.4.2",
    "eslint": "=5.16.0",
    "glob": "=7.1.3",
    "htmlhint": "=0.11.0",
    "js-yaml": "=3.13.1",
    "sass-lint": "=1.13.1",
    "tslint": "=5.16.0",
    "typescript": "=3.4.5",
    "yargs": "=13.2.2"
  },
  "devDependencies": {
    "@types/eslint": "=4.16.6",
    "@types/glob": "=7.1.1",
    "@types/htmlhint": "=0.9.1",
    "@types/jest": "=24.0.11",
    "@types/js-yaml": "=3.12.1",
    "@types/node": "=11.13.8",
    "@types/yargs": "=13.0.0",
    "acorn": "=6.1.1",
    "jest": "=24.7.1",
    "ts-jest": "=24.0.2",
    "ts-node": "=8.1.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.spec.json"
      }
    },
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "zlint": {
    "esFiles": [
      "test/**/*.js"
    ],
    "tsFiles": [
      "test/**/*.ts",
      "src/**/*.ts"
    ],
    "sassFiles": [
      "test/**/*.scss"
    ],
    "htmlFiles": [
      "test/**/*.html"
    ],
    "jsonFiles": [
      "*.json",
      ".eslintrc",
      ".htmlhintrc",
      "lint/**/*.json",
      "lint/.eslintrc",
      "lint/.htmlhintrc",
      "test/*.json",
      "src/**/*.json"
    ],
    "yamlFiles": [
      "./.travis.yml",
      "./.sass-lint.yml",
      "./lint/.sass-lint.yml"
    ]
  }
}
