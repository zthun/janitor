{
  "name": "@zthun/linting",
  "version": "0.0.0",
  "description": "Style checks with tools for web projects using common rules.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zthun/janitor"
  },
  "private": true,
  "scripts": {
    "clean": "rimraf 'packages/**/dist' 'packages/**/docs' 'reports' 'packages/**/*.tgz'",
    "test": "jest --coverage --runInBand",
    "lint": "ts-node packages/lint-janitor/src/cli.ts",
    "build": "lerna run build",
    "doc": "lerna run doc",
    "make": "yarn clean && yarn lint && yarn test && yarn doc && yarn build",
    "prepare": "husky install"
  },
  "author": "Anthony Bonta",
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@types/eslint": "^8.4.2",
    "@types/glob": "^7.2.0",
    "@types/htmlhint": "^1.1.2",
    "@types/jest": "^27.5.1",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.35",
    "@types/vscode": "^1.67.0",
    "@types/yargs": "^17.0.10",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "lerna": "^4.0.0",
    "react": "^18.1.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.4",
    "vscode-test": "^1.6.1"
  },
  "workspaces": [
    "packages/eslint-config",
    "packages/eslint-react-config",
    "packages/stylelint-config",
    "packages/markdownlint-config",
    "packages/htmlhint-config",
    "packages/prettier-config",
    "packages/lint-janitor",
    "packages/lint-janitor-config",
    "packages/vscode-lint-janitor"
  ],
  "packageManager": "yarn@3.2.1"
}
