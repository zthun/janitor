{
  "name": "@zthun/janitor",
  "version": "0.0.0",
  "description": "Style checks with tools for web projects using common rules.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zthun/janitor"
  },
  "private": true,
  "scripts": {
    "clean": "rimraf --glob 'packages/**/dist' 'packages/**/docs' 'reports' 'coverage' 'packages/**/*.tgz'",
    "test": "vitest --run --coverage",
    "lint": "node --loader ts-node/esm packages/lint-janitor/src/cli.ts",
    "build": "lerna run build",
    "make": "yarn clean && yarn lint && yarn test && yarn build",
    "postinstall": "husky install"
  },
  "author": "Anthony Bonta",
  "devDependencies": {
    "@commitlint/cli": "^19.2.0",
    "@commitlint/config-conventional": "^19.1.0",
    "@types/eslint": "^8.56.5",
    "@types/estree": "^1.0.5",
    "@types/glob": "^8.1.0",
    "@types/htmlhint": "^1.1.5",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.0",
    "@types/node": "^20.11.28",
    "@types/prettier": "^3.0.0",
    "@types/yargs": "^17.0.32",
    "@vitest/coverage-istanbul": "^1.4.0",
    "husky": "^9.0.11",
    "lerna": "^8.1.2",
    "react": "^18.2.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3",
    "vitest": "^1.4.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@4.1.1"
}
