{
  "name": "@zthun/web-styles",
  "version": "6.1.0",
  "description": "Style checks with tools for web projects using common rules.",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/zthun/zwebstyles"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "zlint": "./dist/index.js"
  },
  "scripts": {
    "clean": "rimraf coverage dist *.tgz",
    "verify:tslint": "tslint test/test.ts",
    "verify:sasslint": "sass-lint test/test.scss -v -q",
    "verify:htmlhint": "htmlhint test/test.html",
    "verify:eslint": "eslint test/test.js",
    "verify": "npm run verify:eslint && npm run verify:htmlhint && npm run verify:sasslint && npm run verify:tslint",
    "test": "jest --coverage",
    "lint:tslint": "jsonlint lint/tslint.json -q",
    "lint:eslint": "jsonlint lint/.eslintrc -q",
    "lint:htmlhint": "jsonlint lint/.htmlhintrc -q",
    "lint:sasslint": "yamllint lint/.sass-lint.yml",
    "lint": "npm run lint:sasslint && npm run lint:htmlhint && npm run lint:eslint && npm run lint:tslint",
    "build": "tsc",
    "make": "npm run clean && npm run lint && npm test && npm run verify && npm run build && npm pack"
  },
  "author": "Anthony Bonta",
  "dependencies": {
    "chalk": "^2.4.1",
    "eslint": "=5.7.0",
    "htmlhint": "=0.10.1",
    "jsonlint": "=1.6.3",
    "sass-lint": "=1.12.1",
    "tslint": "=5.11.0",
    "typescript": "=3.1.3",
    "yaml-lint": "=1.2.4",
    "yargs": "=12.0.2"
  },
  "devDependencies": {
    "@types/eslint": "^4.16.3",
    "@types/jest": "=23.3.5",
    "@types/node": "=10.12.0",
    "@types/yargs": "=12.0.1",
    "jest": "=23.6.0",
    "ts-jest": "=23.10.4",
    "ts-node": "=7.0.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.spec.json"
      }
    },
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "zlint": {
    "esFiles": [
      "test/*.js"
    ],
    "tsFiles": [
      "test/*.ts",
      "src/**/*.ts"
    ],
    "sassFiles": [
      "test/*.scss"
    ],
    "htmlFiles": [
      "test/*.html"
    ],
    "jsonFiles": [
      "./*.json",
      ".eslintrc",
      ".htmlhintrc"
    ],
    "yamlFiles": [
      "./*.yml"
    ]
  }
}
