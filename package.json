{
  "name": "@zthun/web-styles",
  "version": "6.1.0",
  "description": "Style checks with tools for web projects using common rules.",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/zthun/zwebstyles"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "zlint": "./dist/cli.js"
  },
  "scripts": {
    "clean": "rimraf coverage dist *.tgz",
    "test": "jest --coverage",
    "lint": "ts-node src/cli.ts",
    "build": "tsc",
    "make": "npm run clean && npm run lint && npm test && npm run build && npm pack",
    "start": "node --inspect --debug-brk -r ts-node/register src/cli.ts"
  },
  "author": "Anthony Bonta",
  "dependencies": {
    "chalk": "=2.4.1",
    "eslint": "=5.7.0",
    "glob": "=7.1.3",
    "htmlhint": "=0.10.1",
    "js-yaml": "=3.12.0",
    "sass-lint": "=1.12.1",
    "tslint": "=5.11.0",
    "typescript": "=3.1.3",
    "yargs": "=12.0.2"
  },
  "devDependencies": {
    "@types/eslint": "=4.16.3",
    "@types/glob": "=7.1.1",
    "@types/htmlhint": "=0.9.1",
    "@types/jest": "=23.3.5",
    "@types/js-yaml": "=3.11.2",
    "@types/node": "=10.12.0",
    "@types/yargs": "=12.0.1",
    "jest": "=23.6.0",
    "ts-jest": "=23.10.4",
    "ts-node": "=7.0.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.spec.json"
      }
    },
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "zlint": {
    "esFiles": [
      "test/*.js"
    ],
    "tsFiles": [
      "test/*.ts",
      "src/**/*.ts"
    ],
    "sassFiles": [
      "test/*.scss"
    ],
    "htmlFiles": [
      "test/*.html"
    ],
    "jsonFiles": [
      "./*.json",
      "./lint/*.json",
      "./test/*.json",
      "./src/**/*.json",
      ".eslintrc",
      ".htmlhintrc"
    ],
    "yamlFiles": [
      "./*.yml",
      "./src/**/*.yml"
    ]
  }
}
