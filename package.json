{
  "name": "@zthun/web-styles",
  "version": "7.0.2",
  "description": "Style checks with tools for web projects using common rules.",
  "keywords": [
    "lint",
    "sasslint",
    "tslint",
    "htmlhint",
    "eslint",
    "jsonlint",
    "yamllint"
  ],
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/zthun/zwebstyles"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "zlint": "./dist/cli.js"
  },
  "scripts": {
    "clean": "rimraf coverage dist reports *.tgz",
    "test": "jest --coverage",
    "lint": "ts-node src/cli.ts",
    "build": "tsc",
    "make": "npm run clean && npm run lint && npm test && npm run build && npm pack",
    "prepublishOnly": "npm run make",
    "start": "node --inspect-brk -r ts-node/register src/cli.ts"
  },
  "author": "Anthony Bonta",
  "dependencies": {
    "chalk": "^2.0.0",
    "cosmiconfig": "^5.2.0",
    "eslint": "^5.0.0",
    "glob": "^7.0.0",
    "htmlhint": "~0.11.0",
    "js-yaml": "^3.0.0",
    "sass-lint": "^1.13.0",
    "tslint": "^5.0.0",
    "typescript": "^3.0.0",
    "yargs": "^13.0.0"
  },
  "devDependencies": {
    "@types/cosmiconfig": "^5.0.3",
    "@types/eslint": "^4.0.0",
    "@types/glob": "^7.0.0",
    "@types/htmlhint": "~0.9.0",
    "@types/jest": "^24.0.0",
    "@types/js-yaml": "^3.0.0",
    "@types/node": "^11.0.0",
    "@types/yargs": "^13.0.0",
    "acorn": "^6.0.0",
    "jest": "^24.0.0",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.0"
  },
  "files": [
    "dist/**",
    "lint/**"
  ]
}
