{
  "name": "@zthun/linting",
  "version": "0.0.0",
  "description": "Style checks with tools for web projects using common rules.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zthun/janitor"
  },
  "private": true,
  "scripts": {
    "clean": "rimraf 'packages/**/dist' 'packages/**/docs' 'reports' 'packages/**/*.tgz'",
    "test": "jest --coverage --runInBand",
    "lint": "ts-node packages/lint-janitor/src/cli.ts",
    "build": "lerna run build",
    "doc": "lerna run doc",
    "make": "yarn clean && yarn lint && yarn test && yarn build && yarn doc",
    "prepare": "husky install"
  },
  "author": "Anthony Bonta",
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/eslint": "^8.4.6",
    "@types/glob": "^8.0.0",
    "@types/htmlhint": "^1.1.2",
    "@types/jest": "^29.0.3",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash": "^4.14.186",
    "@types/node": "^18.7.23",
    "@types/vscode": "^1.71.0",
    "@types/yargs": "^17.0.13",
    "@zthun/eslint-react-config": "^12.0.0",
    "@zthun/htmlhint-config": "^12.0.0",
    "husky": "^8.0.1",
    "jest": "^29.1.1",
    "lerna": "^5.5.4",
    "react": "^18.2.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.2",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.15",
    "typescript": "^4.8.4",
    "vscode-test": "^1.6.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@3.2.1"
}
