{
  "name": "@zthun/linting",
  "version": "0.0.0",
  "description": "Style checks with tools for web projects using common rules.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zthun/janitor"
  },
  "private": true,
  "scripts": {
    "clean": "rimraf 'packages/**/dist' 'packages/**/docs' 'reports' 'packages/**/*.tgz'",
    "test": "jest --coverage --runInBand",
    "lint": "ts-node packages/lint-janitor/src/cli.ts",
    "build": "lerna run build",
    "make": "yarn clean && yarn lint && yarn test && yarn build",
    "prepare": "husky install"
  },
  "author": "Anthony Bonta",
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/eslint": "^8.4.1",
    "@types/glob": "^7.2.0",
    "@types/htmlhint": "^1.1.2",
    "@types/jest": "^27.4.0",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash": "^4.14.178",
    "@types/node": "^17.0.13",
    "@types/vscode": "^1.63.1",
    "@types/yargs": "^17.0.8",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lerna": "^4.0.0",
    "react": "^17.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typedoc": "^0.22.11",
    "typescript": "^4.5.5",
    "vscode-test": "^1.6.1"
  },
  "workspaces": [
    "packages/eslint-config",
    "packages/eslint-react-config",
    "packages/stylelint-config",
    "packages/markdownlint-config",
    "packages/htmlhint-config",
    "packages/prettier-config",
    "packages/lint-janitor",
    "packages/lint-janitor-config",
    "packages/vscode-lint-janitor"
  ],
  "packageManager": "yarn@3.2.1"
}
