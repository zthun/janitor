{
  "name": "@zthun/linting",
  "version": "0.0.0",
  "description": "Style checks with tools for web projects using common rules.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zthun/janitor"
  },
  "private": true,
  "scripts": {
    "clean": "rimraf 'packages/**/dist' 'packages/**/docs' 'reports' 'packages/**/*.tgz'",
    "test": "jest --coverage --runInBand",
    "lint": "ts-node packages/lint-janitor/src/cli.ts",
    "build": "lerna run build",
    "make": "yarn clean && yarn lint && yarn test && yarn build",
    "prepare": "husky install",
    "release:publish": "lerna publish --conventional-commits -m \"chore: publish [skip ci]\"",
    "release": "yarn make && yarn release:publish"
  },
  "author": "Anthony Bonta",
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/eslint": "^8.2.1",
    "@types/glob": "^7.2.0",
    "@types/htmlhint": "^0.9.3",
    "@types/jest": "^27.0.3",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash": "^4.14.178",
    "@types/node": "^17.0.2",
    "@types/vscode": "^1.63.1",
    "@types/yargs": "^17.0.7",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "lerna": "^4.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typedoc": "^0.22.10",
    "typescript": "^4.5.4",
    "vscode-test": "^1.6.1"
  },
  "workspaces": [
    "packages/eslint-config",
    "packages/stylelint-config",
    "packages/markdownlint-config",
    "packages/htmlhint-config",
    "packages/prettier-config",
    "packages/lint-janitor",
    "packages/lint-janitor-config",
    "packages/vscode-lint-janitor"
  ],
  "packageManager": "yarn@3.1.1"
}
