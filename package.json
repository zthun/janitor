{
  "name": "@zthun/web-styles",
  "version": "7.1.1",
  "description": "Style checks with tools for web projects using common rules.",
  "keywords": [
    "lint",
    "sasslint",
    "tslint",
    "htmlhint",
    "eslint",
    "jsonlint",
    "yamllint"
  ],
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/zthun/zwebstyles"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "zlint": "./dist/cli.js"
  },
  "scripts": {
    "clean": "rimraf coverage dist reports *.tgz",
    "test": "jest --coverage --runInBand",
    "lint": "ts-node src/cli.ts",
    "build": "tsc",
    "make": "npm run clean && npm run lint && npm test && npm run build && npm pack",
    "prepublishOnly": "npm run make",
    "start": "node --inspect-brk -r ts-node/register src/cli.ts"
  },
  "author": "Anthony Bonta",
  "dependencies": {
    "chalk": "^2.4.2",
    "cosmiconfig": "^5.2.1",
    "eslint": "^6.2.1",
    "glob": "^7.1.4",
    "htmlhint": "~0.11.0",
    "js-yaml": "^3.13.1",
    "sass-lint": "^1.13.1",
    "tslint": "^5.19.0",
    "typescript": "^3.5.3",
    "yargs": "^14.0.0"
  },
  "devDependencies": {
    "@types/cosmiconfig": "^5.0.3",
    "@types/eslint": "^6.1.0",
    "@types/glob": "^7.1.1",
    "@types/htmlhint": "^0.9.1",
    "@types/jest": "^24.0.18",
    "@types/js-yaml": "^3.12.1",
    "@types/node": "^12.7.2",
    "@types/yargs": "^13.0.2",
    "acorn": "^7.0.0",
    "jest": "^24.9.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0"
  },
  "files": [
    "dist/**",
    "lint/**"
  ]
}
