{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "Node",
    "module": "ESNext",
    "target": "ES2015",
    "lib": ["ESNext"],
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "sourceMap": true
  },
  "ts-node": {
    "esm": true
  }
}
